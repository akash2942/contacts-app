<html>
    <head>
        <title>
            <%= locals.title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
             My Contacts list 
        </h1>

        <div>
            <ul>
                <% for(let i of contact_list) {%>
                <li>
                    <p><%= i.name %></p>
                    <p><%= i.phone %></p>

                    <div class="delete-button">
                        <a href="/delete-contact/?phone=<%= i.phone %>&name=<%= i.name %>">
                            <i class="fas fa-window-close"></i>
                        </a>
                    </div>
                </li>
                <% } %>
            </ul>
        </div>

        <form action="/create-contact" method="post">
            <input type="text" name="name" placeholder="Enter your name" required>
            <input type="number" name="phone" placeholder="Enter phone" required>

            <button type="submit"> Add button </button>
        </form>
        <script src="https://kit.fontawesome.com/3d4acf50c8.js" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>